{
  "manifest_version": 3,
  "name": "Parallel Reader",
  "description": "Turn online resources into parallel texts for language learning in the browser",

  "permissions": ["scripting", "activeTab", "storage", "contextMenus"],

  "options_page": "options.html",
  "background": { "service_worker": "background.bundle.js" },
  "action": {
    "default_title": "Parallel Reader",
    "default_icon": {
      "16": "icon16.png",
      "24": "icon24.png",
      "32": "icon32.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },

  "web_accessible_resources": [
    {
      "resources": ["webcomp.css"],
      "matches": ["http://*/*", "https://*/*"]
    }
  ]
}
